{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "noEmitOnError": true,
        "strict": false,
        "target": "ESNext",
        "sourceMap": false,
    },
    "include": ["src/**/*"], // Specify folder you want to compile
    "exclude": ["**/*.spec.ts"] // specify folder you want to exlude from compilation
}